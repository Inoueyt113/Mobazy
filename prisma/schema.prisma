generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model StationStatus{
  id Int @id @default(autoincrement()) // idで一意に特定できないといけないっぽい
  name String    @default("茨城高専")
  availableBatteries Int @default(3)
  Ports Int?
}

model UserHistory {
  id  Int @id @default(autoincrement())
  email String 
  status  String?
  stationName String @default("茨城高専")
  port  Int?
  borrowedAt DateTime? @default(now())
  returnedAt DateTime? 
  usageTime  Int? 
}

model User{
  email String @id
  isBorrowing Boolean 
}
